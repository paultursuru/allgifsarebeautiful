<div class="w-64 mx-auto text-center h-screen">
  <%= image_tag @gif.image_url %>

  <div class="flex justify-between text-xs">
    <div class="text-gray-700">Uploaded by : <%= link_to @gif.user.name, @gif.user %> </div>
    <div>
      <% if user_signed_in? && current_user == @gif.user %>
        <%= link_to 'Edit', edit_gif_path(@gif) %>
      <% end %>
    </div>
  </div>

  <div class="my-4"><%= linked_tag_list @gif %></div>
  <div class="flex text-xs" data-controller="clipboard">
    <%= text_field_tag nil, full_gif_url(@gif), data: { target: "clipboard.source" }, class: "bg-gray-200 appearance-none border-t-2 border-l-4 border-b-4 border-gray-200 w-full rounded-tl py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-blue-700" %>
    <button data-target="clipboard.button" class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded-br" data-action="click->clipboard#copy">Copy</button>
  </div>


</div>
