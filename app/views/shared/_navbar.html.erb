<div class="flex border-b-4 mb-4 text-xxs md:text-sm flex-wrap justify-between items-center h-full p-2 md:h-18">
  <div class="m-2 flex text-center md:block md:text-left">
    <%= link_to "All Gifs Are Beautiful", root_path, class: "w-full bg-gray-700 hover:bg-gray-500 text-white font-bold py-2 px-4 border-b-4 border-r-4 border-gray-800 hover:border-gray-600 rounded-bl rounded-tr" %>
  </div>
  <div class="flex-grow mt-2 mx-5">
    <%= text_field_tag nil, nil, autofocus: true, placeholder: "Search a gif", class: "bg-gray-200 appearance-none border-b-4 border-gray-200 w-full rounded-tl py-2 px-4 text-gray-800 leading-tight focus:outline-none focus:bg-white focus:border-gray-400",
      data: { controller: "search", action: "keypress@window->search#focus", target: "search.field"} %>
  </div>
  <div class="m-2">
    <%= link_to 'New Gif', new_gif_path, class: "bg-purple-500 hover:bg-purple-400 text-white font-bold py-1 md:py-2 px-2 md:px-4 border-b-4 border-l-4 border-purple-700 hover:border-purple-500 rounded-br rounded-tl" %>
  </div>
  <% if user_signed_in? %>
    <div class="m-2">
      <%= link_to "My gifs", current_user, class: "bg-red-500 hover:bg-red-400 text-white font-bold py-1 md:py-2 px-2 md:px-4 border-b-4 border-l-4 border-red-700 hover:border-red-500 rounded-br rounded-tl" %>
    </div>
    <div class="m-2">
      <%= link_to "Account", edit_user_registration_path, class: "bg-orange-500 hover:bg-orange-400 text-white font-bold py-1 md:py-2 px-2 md:px-4 border-b-4 border-l-4 border-orange-700 hover:border-orange-500 rounded-br rounded-tl" %>
    </div>
    <div class="m-2">
      <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "bg-yellow-500 hover:bg-yellow-400 text-white font-bold py-1 md:py-2 px-2 md:px-4 border-b-4 border-l-4 border-yellow-700 hover:border-yellow-500 rounded-br rounded-tl"   %>
    </div>
  <% else %>
    <div class="m-2">
      <%= link_to "Sign up", new_user_registration_path, class: "bg-green-500 hover:bg-green-400 text-white font-bold py-1 md:py-2 px-2 md:px-4 border-b-4 border-l-4 border-green-700 hover:border-green-500 rounded-br rounded-tl"  %>
    </div>
    <div class="m-2">
      <%= link_to "Sign in", new_user_session_path, class: "bg-blue-500 hover:bg-blue-400 text-white font-bold py-1 md:py-2 px-2 md:px-4 border-b-4 border-l-4 border-blue-700 hover:border-blue-500 rounded-br rounded-tl"  %>
    </div>
  <% end %>
</div>
